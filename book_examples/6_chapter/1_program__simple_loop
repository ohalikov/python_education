# ex 3

numbers = [1, 4, 5]
position = 0
while position < len(numbers):
    number = numbers[position]
    if number % 2 == 0:
        print('Found even number', number)
        break
    position += 1
else:  # break не вызываем
    print("no even number found")


# Итерирование по строке
word = 'thud'
offset = 0
while offset < len(word):
    print(word[offset])
    offset += 1

print('\n\n')
# Прерывание
for letter in word:
    if letter == 'x':
        print("EAK! An 'X'!")
        break
    print(letter)
else:
    print("No 'x' in there.")

# range(начало, конец, шаг)
for x in range(10, -1, -2):
    print(x)

# list
print(list(range(2, -1, -1)))
